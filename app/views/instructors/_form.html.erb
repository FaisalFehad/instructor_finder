<%= simple_form_for @instructor do |f| %>
  <fieldset class="form-group">
    <%= f.input :name %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.input :car, label: 'Car Model' %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.input :address, as: :text %>
  </fieldset>

  <fieldset class="form-group">
    <%= f.input :manual, as: :boolean, checked_value: true, uncheked_value: false %>
    <%= f.input :auto, as: :boolean, checked_value: true, uncheked_value: false %>
  </fieldset>

  <%= f.button :submit, 'Save' %>
<% end %>
